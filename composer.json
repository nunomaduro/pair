{
    "name": "nunomaduro/pair",
    "description": "Protocol for AI Rules",
    "keywords": ["php", "tool","protocol", "ai", "rules"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "nunomaduro/termwind": "^2.3",
        "symfony/console": "^7.3",
        "symfony/filesystem": "^7.3"
    },
    "require-dev": {
        "laravel/pint": "^1.23.0",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "phpstan/phpstan": "^2.1.17",
        "rector/rector": "^2.1.0",
        "symfony/var-dumper": "^7.3.1"
    },
    "autoload": {
        "psr-4": {
            "Pair\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --exactly=100",
        "test:typos": "peck",
        "test:lint": "pint --test",
        "test:unit": "pest --coverage",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ]
    },
    "bin": [
        "bin/pair"
    ]
}
